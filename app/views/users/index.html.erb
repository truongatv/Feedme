<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="padding-right: 10px"><%= link_to 'Show', user %></td>
        <td style="padding-right: 10px"><%= image_tag user.avatar , :height => '50', :width => '50', class: "user-avatar" %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
