<p id="notice"><%= notice %></p>
<div class="row">
	<div class="col-sm-3 col-md-4 sidebar">
		<div class="user-info">
	 		<% if user_signed_in? %>
				<%= image_tag @user.avatar, :height => '50', :width => '50', class: "user-avatar" %><br>
				<% if current_user == @user %>
	        		<%= link_to 'Edit avatar', edit_user_path %>
	      		<% end %>
	      	<%end%>
	      	<div class="nav nav-sidebar">
	      		<section class="stats">
	        		<%= render 'shared/stats' %>
	        	</section>
	        	<% if current_user == @user %>
		        	<button class="btn btn-default"><i class="fa fa-upload"></i> <%= link_to 'New Image', new_image_path %></button>
		        <% end %>	
		        <%= render 'follow_form' if user_signed_in? %>
	        </div>
		</div>
	</div>
	<div class="col-sm-9 col-md-8">
		<div class="images-list">
			<% @user.images.each_with_index do |image, index| %>
				<% if index % 2 == 0 %>
					<div class="row">
						<% @user.images.each_with_index do |image1, index1| %>
							<% if index1 == index %>
								<div class="col-sm-3">
									<%= link_to image do %>
										<%= image_tag(image.file.url) %>
									<% end %>
								</div>
							<% elsif index1	 == index + 1 %>
								<div class="col-sm-3 col-sm-push-2">
									<%= link_to image1 do %>
										<%= image_tag(image1.file.url) %>
									<% end %>
								</div>
							<% end %>
						<% end %>
					</div>
					<br>
				<% end %>
			<% end %>
		</div>
	</div>
</div>